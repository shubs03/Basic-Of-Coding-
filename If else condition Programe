
#include <iostream>

using namespace std;

int main()
{
    int a;
    cout<<"enter a number a: "<<endl;
    
    cin>>a;
    
    if(a>0){
        
        cout<<"number is positive ";
    }
    else{
        
        cout<<"number is negative ";
        
    }

    return 0;
}

 /*  Output: enter a number a:
     5
     number is positive    
                          */
